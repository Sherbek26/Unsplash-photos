<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".splash_screen.SplashScreenFragment">

   <com.makeramen.roundedimageview.RoundedImageView
       android:layout_width="match_parent"
       android:layout_height="550dp"
       android:src="@drawable/splash_img"
       android:scaleType="centerCrop"
       app:riv_corner_radius_bottom_left="18dp"
       app:riv_corner_radius_bottom_right="18dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/inter_bold"
        android:text="Wallpaper"
        android:textColor="@color/bar_color"
        android:textSize="24sp" />

   <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:textSize="14sp"
      android:text="Only Wallpaper app you will ever need!"
       android:fontFamily="@font/inter"/>

   <Button
       android:layout_width="match_parent"
       android:layout_height="65dp"
       android:layout_marginHorizontal="8dp"
       android:backgroundTint="@color/btn_color"
       android:layout_marginTop="52dp"
       android:text="Getting started by clicking"
       android:fontFamily="@font/inter"
       android:id="@+id/getting_started"/>


</LinearLayout>